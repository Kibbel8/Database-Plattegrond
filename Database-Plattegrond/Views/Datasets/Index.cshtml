@model Database_Plattegrond.Models.DatasetsViewModel
@{
    ViewBag.Title = "Datasets";
}
<style>
    body {
        background-color: #1476C6;
        font-family: "Helvetica";
    }

    tr {
        background-color: white;
    }

    table {
        border-collapse: collapse;
        border: 5px solid #FDDC03;
        width: 100%;
    }

    td, th {
        border: 1px solid black;
        text-align: left;
        padding: 8px;
    }
</style>
<h2>Datasets kunst</h2>

<table>
    <thead>
        <tr>
            <th style="padding:8px 0">Naam</th>
            <th style="min-width:90px; max-width:110px; padding:8px 0">Beschrijving</th>
            <th style="max-width:80px; padding:8px 0">Beheerder</th>
            <th style="max-width:100px; padding:8px 0">Bewerken</th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (Database_Plattegrond.Models.Dataset Dataset in @Model.Datasets)
            {
                
        <tr>
            <td><a href="/Datasets/Details/?id=@Dataset.Id">@Dataset.Naam</a></td>
            <td>@Dataset.Beschrijving</td>
            <td>@Dataset.Eigenaar.Naam</td>
            <td><a href="/Datasets/DatasetBewerken/?id=@Dataset.Id" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
        </tr>
            }}
    </tbody>
</table>