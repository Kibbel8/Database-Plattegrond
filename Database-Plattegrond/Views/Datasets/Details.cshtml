@using (Html.BeginForm("SubmitComment", "Datasets"))
{
    @Html.HiddenFor(m => m.Dataset.Id)
    <h4>Reageer</h4>
    <p>
        @Html.TextAreaFor(m => m.NewCommentText, new { @class = "form-control", @placeholder = "Plaats een opmerking" })
    </p>
    <input class="form-control btn" id="submitDataset" name="submitDataset" type="submit" value="Verzenden">

}
<hr />

@foreach (Database_Plattegrond.Models.Comment comment in Model.Comments)
{
    <p>
        <strong>Naam:</strong>    @comment.Gebruiker.Naam<br />
        <strong>Datum:</strong>   @comment.DatumGeplaatst<br />
        <strong>Opmerking:</strong> @comment.Tekst<br />
    </p>
    <br />
}