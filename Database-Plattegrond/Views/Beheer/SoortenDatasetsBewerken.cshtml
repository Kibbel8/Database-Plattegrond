@model Database_Plattegrond.Models.SoortDataset
@{
    ViewBag.Title = "SoortenDatasetsBewerken";
}
<h2>Soort dataset Bewerken</h2>

@using (Html.BeginForm("SoortenDatasetsBewerken", "Beheer"))
{
    <div class="col-xs-3">
        @Html.Label("Type")
        @Html.TextBoxFor(m => m.Type, new { @class = "form-control " })
    </div>

    <div class="col-xs-3">
        @Html.Label("Beheerder")
        @Html.TextBoxFor(m => m.Beheerder.Naam, new { @class = "form-control " })
    </div>
    <div class="clearfix"></div>
        <div class="domein-bewerken">
            <input class="form-control btn btn-success domein-bewerken-child" id="submitDataset" name="submitDataset" type="submit" value="Opslaan">
        </div>
}