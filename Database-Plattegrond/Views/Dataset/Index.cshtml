@model Database_Plattegrond.Models.DatasetsViewModel
@{
    ViewBag.Title = "Datasets";
}

<h2>Datasets kunst</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="padding:8px 0">Naam</th>
            <th style="min-width:90px; max-width:110px; padding:8px 0">Beschrijving</th>
            <th style="max-width:80px; padding:8px 0">?</th>
            <th style="max-width:100px; padding:8px 0">?</th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (Database_Plattegrond.Models.Dataset Dataset in @Model.Datasets)
            {
                
        <tr>
            <td>@Dataset.Naam</td>
            <td>@Dataset.Beschrijving</td>
            <td>Things</td>
            <td><a href="/dataset/detail" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
        </tr>
            }}
    </tbody>
</table>