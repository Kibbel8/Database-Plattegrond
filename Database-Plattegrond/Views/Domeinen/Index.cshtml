@model Database_Plattegrond.Models.DomeinenViewModel
@{
    ViewBag.Title = "Domeinen";
}
<h2 class="titel">Domeinen</h2>

@{ foreach (Database_Plattegrond.Models.Domein Domein in @Model.Domeinen)
    {
        <a class="domein" href="/Datasets/?domein=@Domein.Naam">
            <div class="domein-naam">
                @Domein.Naam
            </div>
            <div class="img-container">
                @{ if (Domein.Image != null)
                    {
                        var base64 = Convert.ToBase64String(Domein.Image);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                        <img src="@imgSrc" alt="@Domein.Naam" />
                    }
                    else
                    {
                        <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="@Domein.Naam" />
                    }
                }
                </div>
            </a>
                }
                }
                <div class="clearfix"></div>