@model Database_Plattegrond.Models.DomeinenViewModel
@{
    ViewBag.Title = "Domeinen";
}
<h2>Domeinen</h2>
<form action="/action_page.php">
    Zoek <input type="text" name="fname">
    <input type="submit" value="Zoek" class="btn"><br>
</form>
<br>
<table>
    <thead>
        <tr >
            <th style="padding:8px 0">Naam</th>
            <th style="max-width:100px; padding:8px 0">Bewerken</th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (Database_Plattegrond.Models.Domein Domein in @Model.Domeinen)
            {

                <tr>
                    <td>@Domein.Naam</td>
                    <td><a href="/Domeinen/DomeinenBewerken/?naam=@Domein.Naam" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                </tr>
            }}
    </tbody>
    </table>
    <br>
    <a class="btn btn-default" href="/Domeinen/Toevoegen">Voeg domein toe</a>
    <button type="button" class="btn">Bekijk</button>

<div class="domein"><img class="domein-img" /></div>